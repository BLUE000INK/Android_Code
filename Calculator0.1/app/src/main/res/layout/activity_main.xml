<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3f41"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_min"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edittext_max"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textview_min"
        android:gravity="right"
        android:text=""
        android:singleLine="true"
        android:focusableInTouchMode="false"
        android:background="#225c6e"
        android:textSize="80dp"
        />
    <Button
        android:id="@+id/btn_op_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_num_0"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_op_result"
        app:layout_constraintRight_toLeftOf="@id/btn_num_point"
        android:background="@drawable/button_num_style"
        />
    <Button
        android:id="@+id/btn_num_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_num_0"
        app:layout_constraintRight_toLeftOf="@id/btn_op_chu"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_chu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_num_point"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_num_2"
        android:background="@drawable/button_num_style"
        />
    <Button
        android:id="@+id/btn_num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_0"
        app:layout_constraintLeft_toRightOf="@id/btn_num_1"
        app:layout_constraintRight_toLeftOf="@id/btn_num_3"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_point"
        app:layout_constraintLeft_toRightOf="@id/btn_num_2"
        app:layout_constraintRight_toLeftOf="@id/btn_op_x"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_chu"
        app:layout_constraintLeft_toRightOf="@id/btn_num_3"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_1"
        app:layout_constraintRight_toLeftOf="@id/btn_num_5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button_num_style"
        />
    <Button
        android:id="@+id/btn_num_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_2"
        app:layout_constraintLeft_toRightOf="@id/btn_num_4"
        app:layout_constraintRight_toLeftOf="@id/btn_num_6"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_3"
        app:layout_constraintLeft_toRightOf="@id/btn_num_5"
        app:layout_constraintRight_toLeftOf="@id/btn_op_jian"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_x"
        app:layout_constraintLeft_toRightOf="@id/btn_num_6"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_4"
        app:layout_constraintRight_toLeftOf="@id/btn_num_8"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button_num_style"
        />
    <Button
        android:id="@+id/btn_num_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_5"
        app:layout_constraintLeft_toRightOf="@id/btn_num_7"
        app:layout_constraintRight_toLeftOf="@id/btn_num_9"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_num_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_6"
        app:layout_constraintLeft_toRightOf="@id/btn_num_8"
        app:layout_constraintRight_toLeftOf="@id/btn_op_add"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_jian"
        app:layout_constraintLeft_toRightOf="@id/btn_num_9"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_left_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_op_right_k"
        android:background="@drawable/button_num_style"/>
    <Button
        android:id="@+id/btn_op_right_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_num_8"
        app:layout_constraintLeft_toLeftOf="@id/btn_num_8"
        android:background="@drawable/button_num_style"/>

    <Button
        android:id="@+id/btn_op_CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_left_k"
        app:layout_constraintLeft_toLeftOf="@id/btn_op_left_k"
        android:background="@drawable/button_num_style"
        />

    <Button
        android:id="@+id/btn_op_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《—"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_op_right_k"
        app:layout_constraintLeft_toLeftOf="@id/btn_op_right_k"
        app:layout_constraintRight_toRightOf="@id/btn_op_right_k"
        android:background="@drawable/button_num_style"
        />

    <Spinner
        android:id="@+id/spinner_hanshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btn_op_right_k"
        app:layout_constraintTop_toTopOf="@id/btn_op_right_k"
        app:layout_constraintLeft_toLeftOf="@id/btn_num_9"
        />
    <Spinner
        android:id="@+id/spinner_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btn_op_back"
        app:layout_constraintTop_toTopOf="@id/btn_op_back"
        app:layout_constraintLeft_toLeftOf="@id/btn_num_9"
        />
</androidx.constraintlayout.widget.ConstraintLayout>